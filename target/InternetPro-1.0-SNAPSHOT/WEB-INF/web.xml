<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>utfFilter</filter-name>
        <filter-class>com.finalproject.internetpro.filter.ServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>utfFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>com.finalproject.internetpro.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/home/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>pageAccessFilter</filter-name>
        <filter-class>com.finalproject.internetpro.filter.PageAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>pageAccessFilter</filter-name>
        <url-pattern>/home/*</url-pattern>
    </filter-mapping>

    <error-page>
        <location>/error404.html</location>
    </error-page>
</web-app>